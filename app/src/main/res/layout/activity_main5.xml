<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp"
    tools:openDrawer="start"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="@drawable/topbanner2"
                app:title="Faculty Leave MS"
                app:navigationIcon="@drawable/baseline_account_circle_24"
                app:buttonGravity="center_vertical"
                app:titleMarginStart="40dp"
                app:titleMarginTop="10dp"
                app:titleTextAppearance="@style/ShapeAppearance.MaterialComponents.Tooltip"
                android:paddingStart="15dp"
                app:titleTextColor="@color/black"/>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bbblack"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi User!"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="left"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Faculty Leave Management Application. Start by applying request and wait for the result"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="177.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/noteimg"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/note" />

                    <TextView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Request Leave"
                        android:textColor="@color/white"
                        android:textSize="38dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click Request Leave to submit a leave request and requests will be processed and result will be published "
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="left"
                        android:textColor="@color/white"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Results"
                    android:layout_width="match_parent"
                    android:layout_height="177.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cardview2"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/noteimg3"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/past" />

                    <TextView
                        android:id="@+id/abcde3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Results"
                        android:textColor="@color/bblack"
                        android:textSize="38dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click View Status to view the status of the leave request "
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="left"
                        android:textColor="@color/bblack"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="177.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cardview2"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/noteimg2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/past" />

                    <TextView
                        android:id="@+id/abcde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="View Status"
                        android:textColor="@color/bblack"
                        android:textSize="38dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="left"
                        android:text="Click View Status to view the status of the leave request "
                        android:textColor="@color/bblack" />

                </LinearLayout>
            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bbblack"
            android:orientation="vertical">

            <!-- Content above bottom navigation view -->

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/topbanner2"
            android:backgroundTint="@color/black"
            app:itemIconTint="#1CA47B"
            app:itemTextColor="#1CA47B"
            app:menu="@menu/bottom_navigation_menu" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bbblack"
        app:headerLayout="@layout/nav_header"
        app:itemIconPadding="20dp"
        app:itemIconSize="40dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
